<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNameevent"
        android:layout_alignStart="@+id/textViewNameevent"
        android:layout_marginTop="1dp"
        android:id="@+id/textViewDescription"
        android:textColor="#000000"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place1"
        android:layout_marginTop="0.5dp"
        android:layout_below="@id/textViewDescription"
        android:layout_toLeftOf="@+id/textViewdate"
        android:layout_alignStart="@+id/textViewDescription"
        android:textColor="#000000"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:id="@+id/textViewdate"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textViewNameevent"
        android:layout_alignBottom="@+id/textViewNameevent"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imagenotify"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginStart="13dp"
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/textViewNameevent"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        android:id="@+id/textViewNameevent"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imagenotify" />

</RelativeLayout>

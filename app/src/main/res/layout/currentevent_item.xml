<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/empimage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:id="@+id/colleguesname"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/sports"
        android:textColor="#000000"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colleguesname"
        android:layout_alignStart="@+id/colleguesname"
        android:layout_marginTop="1dp"
        android:id="@+id/textemail"
        android:textColor="#000000"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/colleguesname"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:id="@+id/sports"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place"
        android:layout_below="@+id/textemail"
        android:layout_marginTop="1dp"
        android:layout_alignStart="@+id/textemail"
        android:layout_toLeftOf="@+id/sports"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/empimage"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignTop="@+id/colleguesname"
        android:layout_alignParentStart="true" />


</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="State"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/state_arrays"
                android:prompt="@string/state_prompt"
                android:layout_below="@+id/textView1"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/spinner1"
                android:layout_marginTop="15dp"
                android:text="District"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/textView2"
                android:entries="@array/dist_0"
                android:prompt="@string/district_prompt" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/spinner2"
                android:layout_marginTop="15dp"
                android:text="Type"
                android:textStyle="bold" />
           <Spinner
               android:id="@+id/spinner3"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_below="@+id/textView3"
               android:entries="@array/ty_type"
               android:prompt="@string/type_prompt" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/spinner3"
                android:layout_marginTop="15dp"
                android:text="Plan"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/ty_plan"
                android:prompt="@string/plan_prompt"
                android:layout_below="@+id/textView4"/>
            <Button
                android:id="@+id/submitbutton"
                android:background="@drawable/roundshapebtn"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/spinner4"
                android:layout_marginTop="65dp"
                android:layout_centerHorizontal="true"
                android:text="Submit" />
            <Button
                android:id="@+id/button2"
                android:background="@drawable/roundshapebtn"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/submitbutton"
                android:text="View Fee Structure" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
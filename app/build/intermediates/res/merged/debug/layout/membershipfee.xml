<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/schl"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Building 10 Schools"/>

    <TextView
        android:id="@+id/amnt1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/schl"
        android:text="Textview"/>

    <TextView
        android:id="@+id/unitblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schl"
        android:layout_marginTop="20dp"
        android:text="Unit/Block"/>


    <TextView
        android:id="@+id/onescls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unitblock"
        android:layout_marginTop="20dp"
        android:text="For one Schools"/>


    <TextView
        android:id="@+id/amnt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:text="Textview"
       android:layout_toRightOf="@+id/onescls"
        android:layout_alignTop="@+id/onescls"/>

    <TextView
        android:id="@+id/clsroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/onescls"
        android:layout_marginTop="20dp"
        android:text="Class Room"/>

    <TextView
        android:id="@+id/forroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clsroom"
        android:layout_marginTop="20dp"
        android:text="For a Class Room" />

    <TextView
        android:id="@+id/amt3"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_toRightOf="@+id/forroom"
        android:layout_alignTop="@+id/forroom"/>

    <TextView
        android:id="@+id/brick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forroom"
        android:layout_marginTop="20dp"
        android:text="Donate Brick"/>

    <TextView
        android:id="@+id/onebrick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brick"
        android:layout_marginTop="20dp"
        android:text="For one Bick"/>

    <TextView
        android:id="@+id/amt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_toRightOf="@id/onebrick"
        android:layout_alignTop="@+id/onebrick"
        android:layout_marginLeft="90dp"
        />

    <TextView
        android:id="@+id/adochild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/onebrick"
        android:layout_marginTop="20dp"
        android:text="Adopt a Child"   />

    <TextView
        android:id="@+id/annual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adochild"
        android:layout_marginTop="20dp"
        android:text="Annual"   />

    <TextView
        android:id="@+id/amt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_toRightOf="@id/annual"
        android:layout_alignTop="@+id/annual"
        android:layout_marginLeft="123dp"  />

    <TextView
        android:id="@+id/frd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/annual"
        android:layout_marginTop="20dp"
        android:text="Be a Frient"   />

    <TextView
        android:id="@+id/frdannual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frd"
        android:layout_marginTop="20dp"
        android:text="Annual"   />

    <TextView
        android:id="@+id/amt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_toRightOf="@id/frdannual"
        android:layout_alignTop="@+id/frdannual"
        android:layout_marginLeft="123dp"  />

    <TextView
        android:id="@+id/frdmonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frdannual"
        android:layout_marginTop="20dp"
        android:text="Monthly"   />


    <TextView
        android:id="@+id/amt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Textview"
        android:layout_toRightOf="@id/frdmonth"
        android:layout_alignTop="@+id/frdmonth"
        android:layout_marginLeft="118dp"  />



</RelativeLayout>
